<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table class='table table-striped table-responsive'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Captain email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.captain_email %></td>
        <td><%= link_to 'Riders', riders_path(q: {team_id_eq: team.id}) %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

